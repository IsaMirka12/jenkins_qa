pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                dir('mi-proyecto-maven') {
                    sh 'mvn clean install'
                }
            }
        }
        stage('Test') {
            steps {
                dir('mi-proyecto-maven') {
                    sh 'mvn test'
                }
            }
        }
        stage('Deploy') {
            steps {
                echo "Simulando un despliegue real"
            }
        }
    }
    post {
        always {
            echo "Siempre se ejecutar√°"
        }
        success {
            echo "Cuando todo sale correctamente"
        }
        failure {
            echo "Se ejecuta si el pipeline falla"
        }
    }
}
